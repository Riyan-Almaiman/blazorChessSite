@inject IJSRuntime JSRuntime


@code {
    [Parameter] public string LobbyID { get; set; }
   

     string GetPlayerJoinStatus(bool isJoined)
    {
        return isJoined ? "Joined" : "Waiting...";
    }
    async Task CopyToClipboard()
    {
        await JSRuntime.InvokeVoidAsync("copyTextToClipboard", LobbyID);
    }
}

<div class="fixed z-10 inset-0 overflow-y-auto flex items-center justify-center">
    <div class="fixed inset-0 bg-amber-300 opacity-75"></div>
    <div class="inline-block align-middle bg-white rounded-lg text-center overflow-hidden shadow-xl transform transition-all sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
            <div class="sm:flex sm:items-start">
                <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Lobby code:</h3>
                    <div class="mt-2">
                        <p>@LobbyID</p>
                        <button @onclick="CopyToClipboard" class="mt-4 inline-flex items-center px-4 py-1 border border-transparent text-s leading-4 font-medium rounded-md text-white bg-yellow-600 hover:bg-amber-300 focus:outline-none focus:border-cyan-700 focus:shadow-outline-indigo active:bg-red-700 transition ease-in-out duration-150">Copy</button>

                        <div class="mt-4">
                          <h3 class ="font-bold"style="color:red ">Waiting for other player...</h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

